{
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "lib",
    "skipLibCheck": true,
    "target": "es5",
    "module": "CommonJS",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSourceMap": true
  }
}
